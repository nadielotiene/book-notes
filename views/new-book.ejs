<%- include('partials/header.ejs'); -%>

<div class="page-wrapper">
    <h1 class="title">Add a New Book</h1>
    <main class="card">
        <form action="/books" method="POST">
            <label>Title:</label><br/>
            <input type="text" name="title" placeholder="Book Title" required /><br/>

            <label>Author:</label><br/>
            <input type="text" name="author" placeholder="Author" required /><br/>

            <label>Publish Date:</label><br/>
            <input type="text" name="publish_date" /><br/>

            <label>Cover URL (optional):</label><br/>
            <input type="text" name="cover_url" placeholder="http://... (leave blank for default)" /><br/>

            <label>Notes:</label><br/>
            <textarea name="notes" rows="5"></textarea><br/>

            <button class="btn submit--button" type="submit">Add Book</button>
        </form>
    </main>
</div>

<%- include('partials/footer.ejs'); -%>
